package org.lifeform.gui;

import org.eclipse.swt.SWT;
import org.eclipse.swt.graphics.Color;
import org.eclipse.swt.widgets.Display;

public class TextColors {
	public Color keyword;
	public Color varType;
	public Color quote;
	public Color operator;
	public Color comment;
	public Color bracket;
	public Color normal;
	public Color block;
	public Color line;

	public TextColors(final Display display) {
		// Get Color objects referenced to the display
		keyword = display.getSystemColor(SWT.COLOR_BLUE);
		varType = display.getSystemColor(SWT.COLOR_DARK_BLUE);
		quote = display.getSystemColor(SWT.COLOR_DARK_CYAN);
		operator = display.getSystemColor(SWT.COLOR_RED);
		comment = display.getSystemColor(SWT.COLOR_DARK_GREEN);
		bracket = display.getSystemColor(SWT.COLOR_DARK_RED);
		normal = display.getSystemColor(SWT.COLOR_BLACK);
		block = display.getSystemColor(SWT.COLOR_MAGENTA);
		line = new Color(display, 230, 230, 230); // A nice light gray
	}

}
