package org.lifeform.math;

/**
 * VectorFunction defines a function of multiple variables that returns a
 * resultant vector.
 * 
 */
public interface VectorFunction {

	/**
	 * Evaluates the vector function and returns the the result.
	 * 
	 * If the result array is null, a new array is allocated. Otherwise the
	 * result array is used.
	 * 
	 * @param x
	 * @param result
	 * @return
	 */
	public double[] evaluate(final double[] x, final double[] result);
}

